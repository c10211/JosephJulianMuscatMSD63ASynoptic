@model JosephJulianMuscatMSD63ASynoptic.Models.Domain.Message

@{
    ViewData["Title"] = "Compose";
}

<h1>Compose</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Compose" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="msg" class="control-label">Type your message</label>
                <input asp-for="msg" class="form-control" />
                <span asp-validation-for="msg" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Image?</label>
                <input type=file name="image" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Post" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}